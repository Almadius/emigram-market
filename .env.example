APP_NAME="EMIGRAM MARKET"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8002

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL для Docker)
# ============================================================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=emigram_market
DB_USERNAME=emigram
DB_PASSWORD=emigram_password

# ============================================================================
# SESSION & CACHE
# ============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ============================================================================
# QUEUE & CACHE CONFIGURATION
# ============================================================================
BROADCAST_CONNECTION=pusher
BROADCAST_DRIVER=pusher
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
# CACHE_PREFIX=

# ============================================================================
# REDIS CONFIGURATION (для Docker)
# ============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# MEMCACHED (опционально)
# ============================================================================
MEMCACHED_HOST=127.0.0.1

# ============================================================================
# WEBSOCKETS / PUSHER
# ============================================================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https

# ============================================================================
# CRAWLER CONFIGURATION
# ============================================================================
CRAWLER_INTERVAL_MINUTES=30
CRAWLER_TIMEOUT_SECONDS=30
CRAWLER_MAX_RETRIES=3
CRAWLER_WORKER_URL=
CRAWLER_WORKER_TOKEN=
CRAWLER_WORKER_TIMEOUT_SECONDS=45

# ============================================================================
# DELIVERY SERVICES
# ============================================================================
# DHL
DHL_API_KEY=
DHL_API_SECRET=
DHL_SANDBOX=true

# UPS
UPS_API_KEY=
UPS_API_SECRET=
UPS_SANDBOX=true

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@emigram.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# AWS S3 (опционально, для хранения файлов)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# STRIPE PAYMENTS (для рассрочки)
# ============================================================================
STRIPE_KEY=
STRIPE_SECRET=

# ============================================================================
# OPENAI (для ИИ-помощника)
# ============================================================================
OPENAI_API_KEY=

# ============================================================================
# MEILISEARCH (для полнотекстового поиска)
# ============================================================================
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

# ============================================================================
# SANCTUM CONFIGURATION (для SPA аутентификации)
# ============================================================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8002,127.0.0.1,127.0.0.1:8002
FRONTEND_URL=http://localhost:8002

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
# Порт для API (используется в docker-compose.yml)
API_PORT=8002

# ============================================================================
# FRONTEND / VITE
# ============================================================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
